@model List<FornecedorModel>

@{
    ViewData["Title"] = "Fornecedores";
}

<div class="text-center">
    <h1 class="display-4">Gestão de fornecedores</h1>
    <i class="bi bi-truck" style="font-size: 2rem; margin-top: 10px;"></i>
</div>
<br />

<div>
    <a asp-controller="GestaoProdutos" asp-action="Index" class="btn btn-dark">
        <i class="bi back"></i> ← Voltar
    </a>
    <a asp-controller="Fornecedores" asp-action="Criar" class="btn btn-dark">
        <i class="bi bi-plus-circle"></i> Adicionar Fornecedor
    </a>
    <a asp-controller="Categorias" asp-action="Index" class="btn btn-dark">
        <i class="bi bi-tags"></i> Categorias
    </a>
</div>
<br />

@if (Model != null && Model.Any())
{
    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead class="table-dark">
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Nome</th>
                    <th scope="col">Telefone</th>
                    <th scope="col">Email</th>
                    <th scope="col">Morada</th>
                    <th scope="col" class="text-center">Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var fornecedor in Model)
                {
                    <tr>
                        <th scope="row">@fornecedor.Id</th>
                        <td>@fornecedor.Nome</td>
                        <td>@fornecedor.Telefone</td>
                        <td>@fornecedor.Email</td>
                        <td>@fornecedor.Morada</td>
                        <td class="text-center">
                            <a class="btn btn-warning btn-sm" asp-action="EditarFornecedor" asp-route-id="@fornecedor.Id">
                                <i class="bi bi-pencil"></i> Editar
                            </a>
                            <a class="btn btn-danger btn-sm" asp-action="ConfApagarFornecedor" asp-route-id="@fornecedor.Id">
                                <i class="bi bi-trash"></i> Apagar
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-info text-center">
        <i class="bi bi-exclamation-circle"></i> Nenhum fornecedor encontrado.
    </div>
}