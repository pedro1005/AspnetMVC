@model List<CategoriaModel>

@{
    ViewData["Title"] = "Categorias";
}

<div class="text-center">
    <h1 class="display-4">Gestão de Categorias</h1>
    <i class="bi bi-tags" style="font-size: 2rem; margin-top: 10px;"></i>
</div>
<br />

<div>
    <a asp-controller="GestaoProdutos" asp-action="Index" class="btn btn-dark">
        <i class="bi back"></i> ← Voltar
    </a>
    <a asp-controller="Categorias" asp-action="Criar" class="btn btn-dark">
        <i class="bi bi-plus-circle"></i> Adicionar Categoria
    </a>
    <a asp-controller="Fornecedores" asp-action="Index" class="btn btn-dark">
        <i class="bi bi-truck"></i> Fornecedores
    </a>
</div>
<br />

@if (Model != null && Model.Any())
{
    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead class="table-dark">
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Nome</th>
                    <th scope="col" class="text-center">Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var categoria in Model)
                {
                    <tr>
                        <th scope="row">@categoria.Id</th>
                        <td>@categoria.Nome</td>
                        <td class="text-center">
                            <a class="btn btn-warning btn-sm" asp-action="EditarCategoria" asp-route-id="@categoria.Id">
                                <i class="bi bi-pencil"></i> Editar
                            </a>
                            <a class="btn btn-danger btn-sm" asp-action="ConfApagarCategoria" asp-route-id="@categoria.Id">
                                <i class="bi bi-trash"></i> Apagar
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-info text-center">
        <i class="bi bi-exclamation-circle"></i> Nenhuma categoria encontrada.
    </div>
}
